# LLM configuration
LLM_PROVIDER=openai
LLM_MODEL=
LLM_API_KEY=
LLM_BASE_URL=
LLM_TEMPERATURE=0.3

# Embedding configuration
EMBEDDING_PROVIDER=openai
EMBEDDING_MODEL=
EMBEDDING_API_KEY=
EMBEDDING_BASE_URL=
EMBEDDING_DIMENSION=4096

# Data processing
USE_LLM=false
BATCH_SIZE=16
RETRY_TIMES=3
RETRY_DELAY=5
PROMPT_CONFIG_PATH=

# ==================== Reranker 配置 (可选) ====================
# 总开关
RERANK_ENABLED=false

# 选择模式：cohere / custom
# - cohere: 使用 Cohere 官方 API
# - custom: 使用自建 Reranker 服务（需要实现兼容接口）
RERANK_PROVIDER=cohere

# ========== Cohere API 配置 (RERANK_PROVIDER=cohere) ==========
COHERE_API_KEY=
COHERE_RERANK_MODEL=rerank-multilingual-v3.0
# Cohere API 端点（一般不需要改）
COHERE_RERANK_URL=https://api.cohere.com/v2/rerank

# ========== 自建服务配置 (RERANK_PROVIDER=custom) ==========
# 你自己部署的 Reranker 服务地址，例如：
# RERANK_BASE_URL=http://localhost:8080
# RERANK_ENDPOINT=/rerank  或者直接用完整 URL
RERANK_BASE_URL=
RERANK_ENDPOINT=/rerank
RERANK_API_KEY=
# 自定义 Reranker 模型名称（可选，取决于你的服务是否支持多模型）
# 例如：BAAI/bge-reranker-v2-m3, BAAI/bge-reranker-large
RERANK_MODEL=

# ========== 通用配置 ==========
RERANK_TIMEOUT=30
# 从向量检索结果中取前多少个候选送去 rerank
RERANK_MAX_CANDIDATES=20
# Rerank 后返回前多少个结果
RERANK_TOP_N=10
# 分数融合系数 (0-1)：0.3 表示 30% 向量分数 + 70% rerank 分数
# 设为空则不融合，直接用 rerank 分数排序
RERANK_SCORE_FUSION_ALPHA=0.3

# PostgreSQL / pgvector
PGHOST=localhost
PGPORT=5432
PGDATABASE=vector_db
PGUSER=postgres
PGPASSWORD=
